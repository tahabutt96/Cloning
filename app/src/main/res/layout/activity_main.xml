<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F6CA6B">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/cardview"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="8dp">
                            <RelativeLayout
                                android:background="@drawable/cardborder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/image1"
                                    android:src="@drawable/ic_statistics"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="20dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Statistics\nLearning for\nData Science"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/white"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/image1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="5dp"
                                    android:padding="1dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="casual">
                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btn_one"
                                    android:background="@android:color/transparent">
                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            app:cardBackgroundColor="@color/cardview"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="8dp">
                            <RelativeLayout
                                android:background="@drawable/cardborder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/image2"
                                    android:src="@drawable/ic_r"
                                    android:layout_marginBottom="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="20dp">
                                </ImageView>
                                <TextView
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Data Science\nUsing R"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_below="@+id/image2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="casual">
                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btn_two"
                                    android:background="@android:color/transparent">
                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            app:cardBackgroundColor="@color/cardview"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="8dp">
                            <RelativeLayout
                                android:background="@drawable/cardborder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/image3"
                                    android:src="@drawable/ic_python"
                                    android:tint="@android:color/white"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30dp">
                                </ImageView>
                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Python for Data\nScience"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:fontFamily="casual"
                                    android:textSize="18sp"
                                    android:layout_below="@+id/image3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:padding="1dp"
                                    android:layout_marginBottom="10dp">
                                </TextView>

                                <Button
                                    android:id="@+id/btn_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="0dp"
                                    android:background="@android:color/transparent"></Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="@color/cardview">
                            <RelativeLayout
                                android:background="@drawable/cardborder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/image4"
                                    android:src="@drawable/ic_project"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="40dp">
                                </ImageView>
                                <TextView
                                    android:fontFamily="casual"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sample Projects"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/white"
                                    android:layout_below="@+id/image4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:padding="1dp"
                                    android:layout_marginBottom="10dp">
                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btn_four"
                                    android:background="@android:color/transparent">
                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="@color/cardview">
                            <RelativeLayout
                                android:background="@drawable/cardborder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/image5"
                                    android:src="@drawable/ic_compiler"
                                    android:layout_marginTop="20dp"
                                    android:layout_centerHorizontal="true">
                                </ImageView>
                                <TextView
                                    android:fontFamily="casual"
                                    android:textColor="@android:color/white"
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Do coding on\nmobile - Online\nCompiler"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_below="@+id/image5"
                                    android:padding="1dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="5dp">
                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btn_five"
                                    android:background="@android:color/transparent">
                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="@color/cardview">
                            <RelativeLayout
                                android:background="@drawable/cardborder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/image6"
                                    android:tint="@android:color/white"
                                    android:src="@drawable/ic_exam"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="20dp">
                                </ImageView>
                                <TextView
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="casual"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Simulation Test/\nExam"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_below="@+id/image6"
                                    android:layout_centerHorizontal="true"
                                    android:padding="1dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp">
                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btn_six"
                                    android:background="@android:color/transparent">
                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>